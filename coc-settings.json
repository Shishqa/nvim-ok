{
  "snippets": {
    "userSnippetsDirectory" : "/home/shishqa/.config/nvim/snippets"
  },
  "languageserver": {
    "ccls": {
       "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile-commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "highlight": {
          "lsRanges": true
        }
      }
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/gopls"
        }
      }
    }
  },
  "python": {
    "linting": {
      "pylintEnabled": false,
      "pep8Enabled": true
    }
  }
}
