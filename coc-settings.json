{
  "snippets": {
    "ultisnips" : {
      "directories" : [
        "/home/shishqa/.config/nvim/snippets/",
        "/home/shishqa/.config/nvim/vim-plug/vim-snippets/UltiSnips"
      ]
    }
  },
  "languageserver": {
    "ccls": {
       "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile-commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "highlight": {
          "lsRanges": true
        }
      }
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/gopls"
        }
      }
    },
    "lua" : {
      "command": "/usr/bin/lua-language-server",
      "args": ["-E", "-e", "LANG=en", "/usr/share/lua-language-server/main.lua"],
      "filetypes": ["lua"],
      "rootPatterns": [".vim/", ".git/", ".hg/"]
    }
  },
  "python": {
    "linting": {
      "pylintEnabled": false,
      "pep8Enabled": true
    }
  }
}
